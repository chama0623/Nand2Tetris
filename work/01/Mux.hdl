/** 
 * Multiplexor:
 * if (sel = 0) out = a, else out = b
 */
CHIP Mux {
    IN a, b, sel;
    OUT out;

    PARTS:
    // 0 -> a, 1 -> b;
    Not(in=sel, out=outNot);
    And(a=a, b=outNot, out=outAnd1);
    And(a=b, b=sel, out=outAnd2);
    Or(a=outAnd1, b=outAnd2, out=out);
}